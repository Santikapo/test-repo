<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <h1> Login </h1>
    <div class="login-box">
        <form action="/login" method="post">
          
          <div class="container">
            <label for="email" style="padding-right: 30px;"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email">
        
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw">
          
            <button type="submit">Login</button>
          </div>

          <% if (fail) { %>
            <div class="notfound">
              User not found
            </div>
          <% } %> 


          <a href="/register" style="margin-left: 13px; margin-top: 3px;">Register Here!</a>

           

        </form>
    </div>
</body>
</html>